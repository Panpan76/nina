<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link rel="icon" type="image/png" href="{{ asset('images/logo.png') }}">
        <!-- <link rel="icon" type="image/ico" href="{{ asset('images/favicon.ico') }}"> -->
        <title>
            {% block title %}Bio & Sans{% endblock %}
        </title>
        {% block stylesheets %}
            <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet"/>
            <link href="{{ asset('css/design.css') }}" rel="stylesheet"/>
        {% endblock %}
    </head>
    <body>
        {% block header %}
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <a class="navbar-brand mr-auto" href="{{ path('index') }}">
                    <img src="{{ asset('images/logo.png') }}" width="100" height="100" class="d-inline-block align-top" alt="">
                </a>

                {% if app.user %}
                    {% if is_granted('ROLE_ADMIN') %}
                        <div class="nav-item dropdown">
                            <a class="nav-link dropdown-item" href="{{ path('admin') }}" title="{{ 'label.admin.panel'|trans }}">
                                <i class="fas fa-cog"></i>
                            </a>
                        </div>
                    {% endif %}
                    <span class="navbar-text mr-3">
                        {{ app.user.firstname }}
                        {{ app.user.lastname }}
                    </span>
                    <a class="navbar-brand" href="{{ path('security_logout') }}" title="{{ 'action.sign_out'|trans }}">
                        <i class="fas fa-power-off"></i>
                    </a>
                {% else %}
                    <a href="{{ path('security_login') }}">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                    </a>
                {% endif %}
            </nav>
        {% endblock %}

        {% block nav %}
            <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #e3f2fd;">
                <div class="navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item disabled">
                            <a class="nav-link disabled">Nos produits (prochainement)</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="{{ path('partenaires') }}">Nos partenaires</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="{{ path('index') }}">Qui sommes-nous ?</a>
                        </li>
                    </ul>
                </div>
            </nav>
        {% endblock %}

        {% block ariane %}
            <div class="row">
                <nav aria-label="breadcrumb" class="pl-4 mt-1 d-inline-flex">
                    <ol class="breadcrumb p-1 mb-1 pl-3 pr-3">
                        {% block ariane_content %}{% endblock %}
                    </ol>
                </nav>
            </div>
        {% endblock %}

        {% block body %}{% endblock %}

        {% block footer %}
            <footer>
                <img src="{{ asset('images/ab.png') }}"/>
                <img src="{{ asset('images/cosmetic.png') }}"/>
                <img src="{{ asset('images/ecocert.png') }}"/>
                <img src="{{ asset('images/sans_gluten.png') }}"/>
                <img src="{{ asset('images/vegan.png') }}"/>
            </footer>
        {% endblock %}

        {% block javascripts %}
            <script src="{{ asset('js/jquery.min.js') }}"></script>
            <script src="{{ asset('js/jquery-ui.js') }}"></script>
            <script src="{{ asset('js/bootstrap.bundle.min.js') }}"></script>
            <script defer="defer" src="{{ asset('js/fontawesome.js') }}"></script>
        {% endblock %}
    </body>
</html>