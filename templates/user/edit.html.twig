{% extends "superadmin/base.html.twig" %}

{% block title %}SendEasy - {{ 'admin.superadmin_panel'|trans }}{% endblock %}

{% block ariane_content %}
  {{ parent() }}
  <li class="breadcrumb-item"><a href="{{ path('user') }}">{{ 'users'|trans }}</a></li>
  <li class="breadcrumb-item active" aria-current="page">{{ 'users.edit'|trans }}</li>
{% endblock %}

{% block body %}
  <form action="{{ path('edit_user', { 'user': user.id}) }}" method="POST">
    <fieldset class="col-md-8 offset-md-2">
      <legend>{{ 'users.edit'|trans }}</legend>
      <div class="form-group">
        <label for="firstname">{{ 'firstname'|trans }}</label>
        {{ form_widget(form.firstname) }}
      </div>
      <div class="form-group">
        <label for="lastname">{{ 'lastname'|trans }}</label>
        {{ form_widget(form.lastname) }}
      </div>
      <div class="form-group">
        <label for="username">{{ 'username'|trans }}</label>
        {{ form_widget(form.username) }}
      </div>
      <div class="form-group">
        <label for="email">{{ 'email'|trans }}</label>
        {{ form_widget(form.email) }}
      </div>
      <div class="form-group">
        <label for="roles">{{ 'roles'|trans }}</label>
        {{ form_widget(form.roles) }}
      </div>
      <div class="form-group">
        <label for="entity">{{ 'entity'|trans }}</label>
        {{ form_widget(form.entity) }}
      </div>
      {{ form_widget(form._token) }}
      <button type="submit" class="btn btn-primary">
        <i class="fa fa-plus" aria-hidden="true"></i> {{ 'edit'|trans }}
      </button>
    </fieldset>
  </form>
{% endblock %}
